---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import heroImage from '~/assets/images/content/guitar-builder-dashboard.jpeg';
const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About "
    image={{
      src: heroImage,
      alt: 'Building a custom guitar',
    }}
  >
    <Fragment slot="title">
      Guitarious is a site for custom guitar builders
    </Fragment>

    <Fragment slot="subtitle">
      In this wrbsite you will find all the information you need to build a custom guitar. Guitar bodies, necks, nessary equipment and more.
      Also you can find a list of customer guitar makers. Hand made guitars and some information about building a guitar without any power tool. 
    </Fragment>
  </Hero>
 
</Layout>
